<% if @article.errors.any? %>
  <h3>The following errors prevented the article from being created</h3>
  <ul>
    <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <div class="form-group row">
    <%= f.label :title, class: "col-sm-2 col-form-label" %><br/>
    <div class="col-sm-8">
      <%= f.text_field :title, class: 'form-control' %>
    </div>

  </div>
  <div class="form-group row">
    <%= f.label :description, class: "col-sm-2 col-form-label" %><br/>
    <div class="col-sm-8">
      <%= f.text_area :description, class: 'form-control', rows: 10 %>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-sm-2 col-sm-8">
      <%= f.submit class: 'btn btn-primary'%>
    </div>
  </div>
<% end %>
<div class="col-sm-4 offset-sm-4">
  [ <%= link_to "Cancel and return to articles listing", articles_path %> ]
</div>
